{
  "name": "serverless-rest-api",
  "version": "1.0.0",
  "description": "Serverless RESTful API demo",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "mocha": "NODE_ENV=test ./node_modules/.bin/mocha --opts mocha.opts",
    "test:init": "NODE_ENV=test node ./bin/test_init.js",
    "test:cov": "NODE_ENV=test nyc --reporter=text --reporter=lcov mocha --recursive --exit",
    "test": "npm run lint && npm run test:init && npm run mocha"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "author": "haijian.yang",
  "license": "ISC",
  "dependencies": {
    "config": "^3.1.0",
    "ioredis": "^4.14.0"
  },
  "devDependencies": {
    "aws-sdk": "^2.814.0",
    "babel-eslint": "^10.0.1",
    "bluebird": "^3.5.5",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chance": "^1.1.0",
    "cz-conventional-changelog": "^3.0.2",
    "dynalite": "^2.3.2",
    "dynamodb-localhost": "0.0.9",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "husky": "^3.1.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "power-assert": "^1.6.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "serverless": "^1.51.0",
    "serverless-dynamodb-local": "^0.2.35",
    "serverless-offline": "^3.25.6",
    "sinon": "^7.4.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
